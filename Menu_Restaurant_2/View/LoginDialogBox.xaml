<Window x:Class="Menu_Restaurant_2.View.LoginDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login Dialog" Height="600" Width="800"
        Background="{StaticResource BeigeBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        SizeToContent="WidthAndHeight">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Name="MessageText1" Text="Username" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="{StaticResource DarkBrownBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Name="InputTextBox1" Height="40" Margin="0,0,0,10"/>

            <TextBlock Name="MessageText2" Text="Password"
                       FontSize="16" FontWeight="Bold" 
                       Foreground="{StaticResource DarkBrownBrush}" 
                       Margin="0,10,0,5"/>
            <TextBox Name="InputTextBox2" Height="40" Margin="0,0,0,20"/>

            <Button Content="OK" Width="100" Height="35" HorizontalAlignment="Center"
                    Click="OkButton_Click" Background="{StaticResource LightBrownBrush}" 
                    Foreground="White" BorderBrush="{StaticResource DarkBrownBrush}" BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Window>
