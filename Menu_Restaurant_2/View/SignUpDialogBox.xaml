<Window x:Class="Menu_Restaurant_2.View.SignUpDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Sign Up"
        Height="600" Width="800"
        Background="{StaticResource BeigeBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        mc:Ignorable="d">

    <Grid>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Margin="0,124,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Labels + Inputs -->
            <TextBlock Grid.Row="0" Name="MessageText1" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBrownBrush}" Margin="0,10,0,0"/>
            <TextBox Grid.Row="1" Name="InputTextBox1" Width="300" Height="32" Margin="0,5,0,10"/>

            <TextBlock Grid.Row="2" Name="MessageText2" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBrownBrush}"/>
            <TextBox Grid.Row="3" Name="InputTextBox2" Width="300" Height="32" Margin="0,5,0,10"/>

            <TextBlock Grid.Row="4" Name="MessageText3" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBrownBrush}"/>
            <TextBox Grid.Row="5" Name="InputTextBox3" Width="300" Height="32" Margin="0,5,0,10"/>

            <TextBlock Grid.Row="6" Name="MessageText4" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBrownBrush}"/>
            <TextBox Grid.Row="7" Name="InputTextBox4" Width="300" Height="32" Margin="0,5,0,10"/>

            <!-- Buton OK -->
            <Button Content="OK"
                    Width="80" Height="40"
                    HorizontalAlignment="Left"
                    Margin="175,69,0,-49"
                    Grid.Row="7"
                    Click="OkButton_Click" RenderTransformOrigin="0.538,1.874"/>
        </Grid>
    </Grid>
</Window>
