<Window x:Class="Menu_Restaurant_2.View.EditMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Menu_Restaurant_2.View"
        xmlns:vm="clr-namespace:Menu_Restaurant_2.ViewModel"
        Title="Edit Menu" Height="600" Width="800" 
        Background="{StaticResource BeigeBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center" >
        <TextBlock Text="Edit Menu" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkBrownBrush}" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Button Content="Add Dish" Command="{Binding AddDCommand}" Margin="0,5" RenderTransformOrigin="0.487,-0.07" />
        <Button Content="Delete Dish" Command="{Binding DeleteDCommand}" Margin="0,5" />
        <Button Content="Update Dish" Command="{Binding UpdateDCommand}" Margin="0,5" />
        <Button Content="Add Menu" Command="{Binding AddMCommand}" Margin="0,5" RenderTransformOrigin="0.487,-0.07" />
        <Button Content="Delete Menu" Command="{Binding DeleteMCommand}" Margin="0,5" />
        <Button Content="Update Menu" Command="{Binding UpdateMCommand}" Margin="0,5" />
        <Button Content="Back" Command="{Binding BackCommand}" />
    </StackPanel>
</Window>
